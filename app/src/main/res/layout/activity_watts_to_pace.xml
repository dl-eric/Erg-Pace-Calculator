<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ergpacecalculator.WattsToPace">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView4" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:id="@+id/splitOutput"
                android:layout_marginTop="56dp"
                android:textSize="84dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/w_Pace"
                android:id="@+id/textView3"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:text="Calculate"
                android:id="@+id/CalculateSplitButton"
                android:onClick="calculate"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50dp"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:inputType="number"
                android:id="@+id/wattsInput"
                android:textSize="36sp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/w_Watts"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
